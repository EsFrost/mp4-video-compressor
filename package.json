{
  "name": "mp4-video-compressor",
  "version": "1.0.0",
  "description": "Ffmpeg video compressor for mp4 files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Sigmund Frost",
  "license": "MIT",
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest"
  },
  "dependencies": {
    "fluent-ffmpeg": "^latest",
    "ffmpeg-static": "^latest"
  },
  "build": {
    "appId": "com.sigmundfrost.electronvideocompressor",
    "productName": "Electron Video Compressor",
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!.angular",
      "!.vscode",
      "!.editorconfig",
      "!*.map"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
